<!DOCTYPE html>
<html>
<head>
  <title>Test2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if seller_signed_in? %>
    <span>Здравствуйте, <%= current_seller.email %></span>
    <%= link_to 'Выйти', destroy_seller_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Войти', new_seller_session_path %> или <%= link_to 'Зарегистрироваться', new_seller_registration_path %>
<% end %>
<%= yield %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</body>
</html>
